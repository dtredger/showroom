
<div class="main-section">
	<!-- items -->
	<div class="row">
    <div class="small-8 medium-8 large-12 small-centered columns">
      <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">
        <% @items.each_with_index do |item, index| %>
          <li>
            <div class="item" id="item-<%= index %>">
              <%= link_to item_path(item, modal: true), remote: true do %>
                <div class="item-picture">
                  <%= image_tag(item.images.first.source, size:"280x400") %>
                  
                  <% end %>
                </div>
                <div class='item-info'>
                  <%= link_to new_closets_item_path(item_id: item.id), remote: true, class: "special-span closet-button" do %>
                    <div class="add-item"><i class="fa fa-plus-circle"></i></div>
                    <%= link_to item_path(item, modal: true), remote: true do %>
                  <div class='item-designer'><h4><b><%= truncate(item.designer, :length => 30) %></b></h4></div>
                  <div class='item-name'><%= truncate(item.product_name, :length => 50) %></div>
                  <div class='item-price'><%= humanized_money_with_symbol item.price %></div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
  		<div class="medium-12 small-centered columns text-center">
  			

  			<!-- paginate row -->
  			<div class="row">
  				<div class="placeholder">
  					<%= paginate @items %>
  				</div>
  			</div>

  		</div>
    </div>
	</div>
</div>

<div id="closet-modal" class="reveal-modal" data-reveal></div>
<div id="show-modal" class="reveal-modal xlarge" data-reveal></div>