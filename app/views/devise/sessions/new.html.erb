<div class="row">
  <div class="small-5 small-centered columns">

    <div class="register-header">
      <h2>Sign in</h2>
    </div>

    <!-- facebook registration button -->
    <div class="center-facebook-button">
      <a href="/users/auth/facebook" class="facebook-login-button" id="facebook-registration-button">
        <span>Sign in with Facebook</span>
      </a>
    </div>

    <!-- or divider -->
    <div>
      <span class="or-divider"><span>or</span><span>
    </div>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :login, required: true, autofocus: true %>
		    <%= f.input :password, required: true %>
		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Sign in", :class=> "right" %>
		  </div>
		<% end %>
		<%= render "devise/shared/links" %>

  </div>
</div>

















