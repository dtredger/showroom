<br/>
<div class="row panel">
	<div class="medium-12 small-centered columns">

        <% @closets.each do |closet| %>
          <%= link_to(closet_path(closet)) do %>
            <div class="medium-5 closet">
              <div class="closet-description">
                <span><%= closet.title %></span>
                -
                <span><%= closet.items.size %></span> items
              </div>

              <% closet.items.each do |item| %>
                  <%= image_tag(item.images.first.source, size:"126x160", class:"closet-image") %>
              <% end %>

            </div>
          <% end %>
        <% end %>

	</div>
</div>

